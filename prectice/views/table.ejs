<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div align="center">
        <h1>view user</h1>

        <form action="/view">
            <table border="1">
                <thead>
                    <tr>
                        <td>id</td>
                        <td>name</td>
                        <td>email</td>
                        <td>password</td>
                        <td>delete</td>
                        <td>edit</td>
                    </tr>
                </thead>
                <tbody>
                    <% allrecord.map((val,i)=>{
                        %>
                        <tr>
                            <td>
                                <%= val.id%>
                            </td>
                            <td>
                                <%= val.username %>
                            </td>
                            <td>
                                <%= val.useremail %>
                            </td>
                            <td>
                                <%= val.userpassword %>
                            </td>
                            <td>
                                <a href="/deleteid?did=<%= val.id %>">delete</a>
                            </td>
                            <td>
                                <a href="/editid?eid=<%=val.id %>">edit</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </form>
        <a href="/">form</a>
    </div>
</body>

</html>